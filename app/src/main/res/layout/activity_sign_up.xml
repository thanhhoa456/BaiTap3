<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/imageViewbg"
        android:layout_width="408dp"
        android:layout_height="335dp"
        android:scaleType="fitXY"
        android:src="@drawable/top_background1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome Text -->
    <!-- Password Icon -->

    <!-- User Icon -->
    <TextView
        android:id="@+id/tvCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColor="@color/blue"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewbg"
        />

    <ImageView
        android:id="@+id/iconUser"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/bottom_btn2"
        app:layout_constraintTop_toBottomOf="@id/imageViewbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintMarginStart="36dp"
        app:layout_constraintMarginTop="16dp" />

    <!-- User Input -->
    <EditText
        android:id="@+id/etUserName"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:hint="Name"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/iconUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewbg"
        app:layout_constraintMarginStart="8dp"
        app:layout_constraintMarginEnd="32dp"
        app:layout_constraintMarginTop="16dp" />


    <!-- Email Icon -->
    <ImageView
        android:id="@+id/iconEmail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/email"
        app:layout_constraintTop_toBottomOf="@id/tvCreateAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintMarginStart="36dp"
        app:layout_constraintMarginTop="24dp" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/iconEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCreateAccount"
        app:layout_constraintMarginStart="8dp"
        app:layout_constraintMarginEnd="32dp"
        app:layout_constraintMarginTop="16dp" />

    <!-- Password Icon -->
    <ImageView
        android:id="@+id/iconPassword"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/password"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintMarginStart="36dp"
        app:layout_constraintMarginTop="16dp" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@id/iconPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintMarginStart="8dp"
        app:layout_constraintMarginEnd="32dp"
        app:layout_constraintMarginTop="16dp" />

    <!-- Login Button -->
    <ImageView
        android:id="@+id/btnLogin"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:src="@drawable/btn_arrow2"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginEnd="32dp"
        app:layout_constraintMarginTop="24dp" />

    <!-- Social Login Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">


    </LinearLayout>

    <!-- Register Text -->
    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget your password? Recovery it"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>
